    <script type="text/javascript">
        function fn_login() {
            var arg = {
                usuario: $.trim($("#username").val()),
                password: $.trim($("#password").val())
            };
            $.post("../Login/IniciarSesion", arg, function (d) {
                if (d) {
                    location.reload()
                } else {
                    Swal.fire('AVISO!', 'Usuario o contraseña inválido', 'warning');
                }
                
            });
        }
    </script>
